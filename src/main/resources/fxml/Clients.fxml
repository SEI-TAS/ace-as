<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="edu.cmu.sei.ttg.aaiot.as.gui.ClientsController"
          alignment="TOP_LEFT" hgap="10" vgap="10">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label style="-fx-font: NORMAL 20 Tahoma;" text="Paired Clients"
           GridPane.columnIndex="0" GridPane.rowIndex="0">
    </Label>
    <Button text="Pair Client" onAction="#pairClient" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TableView fx:id="clientsTableView" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <columns>
            <TableColumn text="ID" prefWidth="160">
                <cellValueFactory>
                    <PropertyValueFactory property="id" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Actions">
            </TableColumn>
        </columns>
    </TableView>
</GridPane>
